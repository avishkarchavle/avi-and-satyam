<body style="background-color: white">


    <div id="teacher" class="container py-5 h-100">

        <nav class="navbar sticky-top navbar-light bg-light ">
            <a class="navbar-brand " href="/home"><button type="button " class="btn btn-dark ">HOME</button></a>

            <a class="navbar-brand  " href="/already"><button type="button " id="acc " class="btn btn-outline-success ">
                    ALREADY HAVE AN ACCOUNT? </button></a>

        </nav>
        <%- include('../partials/flash')%>
            <CENter>
                <h1>TEACHER REGISTRATION </h1>
            </CENter>

            <form action="/teachers" method="POST">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form6Example1" class="form-control" name=teacher[firstName] required>
                            <label class="form-label" for="form6Example1">First name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form6Example2" class="form-control" name=teacher[lastName] required>
                            <label class="form-label" for="form6Example2">Last name</label>
                        </div>
                    </div>
                </div>

                <!-- Number input -->
                <div class="form-outline mb-4">
                    <input type="text" id="form6Example6" class="form-control" name=teacher[qualification] required>
                    <label class="form-label" for="form6Example6">Qualification</label>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form6Example1" class="form-control" name=teacher[experience]
                                required>
                            <label class="form-label" for="form6Example1">Experience</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <input type="text" id="form6Example2" class="form-control" name=teacher[gender] required>
                            <label class="form-label" for="form6Example2">Gender</label>
                        </div>
                    </div>
                </div>

                <!-- Text input -->
                <div class="form-outline mb-4">
                    <input type="text" id="form6Example3" class="form-control" name=teacher[subject] required>
                    <label class="form-label" for="form6Example3">Subject</label>
                </div>


                <!-- Text input -->
                <div class="form-outline mb-4">
                    <input type="text" id="form6Example4" class="form-control" name=teacher[address] required>
                    <label class="form-label" for="form6Example4">Address</label>
                </div>

                <div class="row mb-4">
                    <!-- Email input -->
                    <div class="col">
                        <div class="form-outline mb-4">
                            <input type="email" id="form6Example5" class="form-control" name=teacher[email] required>
                            <label class="form-label" for="form6Example5">Email</label>
                        </div>
                    </div>
                    <!-- password input -->
                    <div class="col">
                        <div class="form-outline mb-4">
                            <input type="number" id="form6Example5" class="form-control" name=teacher[phone]>
                            <label class="form-label" for="form6Example5">Phone</label>
                        </div>
                    </div>
                </div>
                <!-- Message input -->
                <div class="form-outline mb-4">
                    <textarea class="form-control" id="form6Example7" rows="4" name=teacher[additionalInfo]></textarea>
                    <label class="form-label" for="form6Example7">Additional information</label>
                </div>


                <!-- Checkbox -->

                <!-- Submit button -->
                <button class="btn btn-primary btn-block mb-4">REGISTER</button>
            </form>

